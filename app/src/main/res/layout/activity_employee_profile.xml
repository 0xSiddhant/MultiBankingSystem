<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmployeeProfile"
    android:background="#eee">

    <android.support.v7.widget.CardView
        android:id="@+id/edetail"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_margin="2dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true">

        <TextView
            android:id="@+id/eid1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:text="Employee Detail"
            android:textSize="26dp" />

        <TextView
            android:id="@+id/eid2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="50dp"
            android:text="Employee Name:"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/eid3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="80dp"
            android:text="Employee Id:"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/eid4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="110dp"
            android:text="Bank:"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/eid5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="140dp"
            android:text="Mobile:"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/eid6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="170dp"
            android:text="E-mail:"
            android:textStyle="bold"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/pbr"
        android:layout_width="300dp"
        android:layout_height="51dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="260dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#92e7fc">

        <TextView
            android:id="@+id/pbr1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending Banker Request"
            android:layout_gravity="center"
            android:textSize="24dp"/>
    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        android:id="@+id/pur"
        android:layout_width="300dp"
        android:layout_height="51dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="317dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#92e7fc">

        <TextView
            android:id="@+id/pur1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending User Request"
            android:layout_gravity="center"
            android:textSize="24dp"/>
    </android.support.v7.widget.CardView>

    
    <android.support.v7.widget.CardView
        android:id="@+id/elogout1"
        android:layout_width="200dp"
        android:layout_height="51dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="420dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/colorAccent">

        <TextView
            android:id="@+id/elogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:textSize="24dp"/>
    </android.support.v7.widget.CardView>

</RelativeLayout>