<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminProfile"
    android:background="#eee">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="235dp"
        android:layout_height="144dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        app:srcCompat="@drawable/mb1" />

    <android.support.v7.widget.CardView
        android:id="@+id/listofcustomer"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#92e7fc">

        <TextView
            android:id="@+id/listofcustomerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="List of customers"
            android:layout_gravity="center"
            android:textSize="20dp"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/listofac"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="232dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#92e7fc">

        <TextView
            android:id="@+id/listofac1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="List Of Account"
            android:layout_gravity="center"
            android:textSize="20dp"/>
    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        android:id="@+id/tpending"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="284dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#92e7fc">

        <TextView
            android:id="@+id/tpending1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transfer Pending"
            android:layout_gravity="center"
            android:textSize="20dp"/>
    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        android:id="@+id/decline"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="336dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#92e7fc">

        <TextView
            android:id="@+id/decline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transfer Decline"
            android:layout_gravity="center"
            android:textSize="20dp"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/pac"
        android:layout_width="300dp"
        android:layout_height="51dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="388dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#92e7fc">

        <TextView
            android:id="@+id/pac1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Pending A/c"
            android:layout_gravity="center"
            android:textSize="20dp"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/alogout"
        android:layout_width="200dp"
        android:layout_height="51dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="455dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/colorAccent">

        <TextView
            android:id="@+id/alogout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:textSize="24dp"/>
    </android.support.v7.widget.CardView>

</RelativeLayout>